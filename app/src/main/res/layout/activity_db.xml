<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_db1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建数据库" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_db2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加入数据库 insert" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_db3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新数据库 update" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_db4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除数据库 delete" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_db5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询数据库 query" />

</LinearLayout>
